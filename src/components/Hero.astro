---
import { Icon } from 'astro-icon/components'

const { src = '/astronaut-hero-img.webp' } = Astro.props
---

<section class="hero my-24">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-6xl md:text-left lg:text-7xl">
          <slot>We help your startup <span class="text-gradient">shine</span></slot>
        </h1>
        <p class="text-center text-lg md:text-left">
          Moonshine is a digital studio that helps startups and small businesses define, design, and build exceptional
          brands and innovative products.
        </p>
        <div class="flex flex-col gap-3 min-[500px]:flex-row">
          <a class="button has-icon" href="https://tidycal.com/moonshine/intro">
            <Icon name="ion:calendar-outline" />
            Book an intro call
          </a>
        </div>
      </div>
      <img class="hidden lg:block" src={src} alt="" decoding="async" />
    </div>
  </div>
</section>

<style lang="scss">
  .text-gradient {
    background: linear-gradient(315deg, theme('colors.primary.200') 25%, theme('colors.secondary.500'));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  :global(.darkmode .text-gradient) {
    background: linear-gradient(315deg, theme('colors.primary.200') 25%, theme('colors.secondary.400'));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
